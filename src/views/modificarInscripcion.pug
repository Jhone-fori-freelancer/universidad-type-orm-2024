extends index
block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Proyecto
            span.font-normal Universidad
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                
                form(method='POST' action=`/CursosEstudiantes/actualizarInscripcion/${cursoEstudiante.estudiante.id}/${cursoEstudiante.curso.id}` noValidate)
                    input(type="hidden" name="_method" value="PUT")

                    
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold Estudiante
                        p.text-gray-700= `${cursoEstudiante.estudiante.nombre} ${cursoEstudiante.estudiante.apellido}`

                  
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold Curso
                        p.text-gray-700= `${cursoEstudiante.curso.nombre}`

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="nota") Calificación
                        input#calificacion.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Calificación" type="number" name="nota" step="0.01" min="0" max="10" value=cursoEstudiante.nota required)

                    .flex.items-center.justify-between
                        button(type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer") Modificar Nota
            