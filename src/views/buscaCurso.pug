extends index

block content
  h1 #{pagina}

  if id
    p ID del Curso a buscar: #{id}
    
  
    form(method="post", action=`/buscaCurso /${id}`)
      button.btn(type="submit") Buscar Curso 

  else
    p No se ha proporcionado un ID.
    
  //- Formulario de b√∫squeda por ID
  form(method="get", action="/buscaCurso ")
    label(for="id") Ingrese el ID del Curso :
    input(type="text", name="id", placeholder="ID del Curso ")
    button.btn(type="submit") Buscar